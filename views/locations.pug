extends layout

block content

        h1 Locations
        <a href="/addLocation">Add a Location </a>
        br
        table
            thead
                tr
                    th Location Name
                    th Country
                    th Avg Quality
                    th Avg Grade
                    th Number of Climbs
                    th 'Best' Climb Name
                    th Grade
            tbody
                each l in locations
                    tr
                        td: a(href="/Locations/" + l.ID) #{l.Name} 
                        td #{l.Country}
                        if l.AvgQuality
                            td #{l.AvgQuality}
                        else
                            td --
                        if l.AvgGrade != NaN
                            td #{l.AvgGrade}
                        else
                            td --
                        td #{l.NumClimbs}
                        if l.BestClimb != "None"
                            td #{l.BestClimb}
                        else
                            td --
                        if l.BestGrade != "N/a"
                            td #{l.BestGrade}
                        else
                            td --

